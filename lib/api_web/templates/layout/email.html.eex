<!doctype html>
<html>
  <head>
    <style type="text/css">
      @import url('https://fonts.googleapis.com/css?family=Comfortaa:400,700');

      // Global
      * {
        margin: 0;
        padding: 0;
        font-size: 100%;
        font-family: "Comfortaa", "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
        line-height: 1.65;
      }

      img {
        max-width: 100%;
        margin: 0 auto;
        display: block;
      }

      body {
        width: 100% !important;
        height: 100%;
        background: #f9f9f9;
        padding: 20px 0 40px;
        -webkit-font-smoothing:antialiased;
        -webkit-text-size-adjust:none;
      }

      // Typography
      h1, h2, h3, h4, h5, h6 {
        line-height: 1.25;
      }
      h1 {
        font-size: 32px;
      }
      h2 {
        font-size: 28px;
      }
      h3 {
        font-size: 24px;
      }
      h4 {
        font-size: 20px;
      }
      h5 {
        font-size: 16px;
      }

      p, ul, ol {
        font-size: 16px;
        font-weight: normal;
        margin-bottom: 16px;
      }

      a {
        text-decoration: none;
        font-weight: bold;
      }

      // layout
      .container {
        display: block;
        clear: both;
      }

      .content {
        margin: 0 auto;
        max-width: 580px;
        background: white;
        padding: 30px 35px;
      }

      // helpers
      .text-center {
        text-align: center;
      }

      .text-right {
        text-align: right;
      }

      .text-left {
        text-align: left;
      }

      .muted {
        color: #666;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="content">
        <%= render @view_module, @view_template, assigns %>
      </div>
    </div>
  </body>
</html>
